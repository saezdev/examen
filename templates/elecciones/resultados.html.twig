{% extends 'base.html.twig' %}

{% block title %}Hello EleccionesController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Resultados Elecciones</h1>

		<table>
			<thead>
				<tr>
					<th>SINDICATO</th>
					<th>DELEGADOS</th>
					<th>VOTOS</th>
				</tr>
			</thead>

			<tbody>
				{% for i in 0..votos|length - 1 %}
					<tr>
						{% set num = test[i] %}
						{% set partes = num|split('.') %}
						<td>{{votos[i].sindicato.sindicato}}</td>
						<td>{{test[i]}}</td>
						<td>{{votos[i].votos}}</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>

		<p>Total de votos:
			{{votos_total}}</p>

	</div>
{% endblock %}
